---
import QuizComponent from './QuizComponent';

const { topic } = Astro.props;

const generateTopicKey = (topic: string) => {
  const pathname = Astro.url.pathname;
  const isDev = Astro.url.host.includes('localhost');
  const segments = pathname.split('/').slice(1);
  if (!isDev) segments.pop();
  return segments.join('_');
}

const formatTopicName = (topic: string) => {
  // Remove .mdx extension if present
  const baseName = topic.replace(/\.mdx$/, '');
  return baseName
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
};

const topicName = formatTopicName(topic);
---

<div class="quiz-container">
  <QuizComponent client:load topicKey={generateTopicKey(topic)} topicName={topicName} />
</div>

<style>
  .quiz-container {
    margin-top: 2rem;
  }
</style>
